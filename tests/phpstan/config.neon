parameters:
    bootstrapFiles:
        - ./constants.php
        - ../bootstrap.php
    paths:
        - ../../src
        - ../AppFrameworkTestClasses
        - ../AppFrameworkTests
        - ../application/assets
        - ../application/ajax
        - ../application/api
        - ../application/themes/default/templates
        - ../application/xml
    dynamicConstantNames:
        - APP_ROOT
        - APP_TESTS_RUNNING
        - APP_FRAMEWORK_TESTS
        - TESTSUITE_DB_PORT
    ignoreErrors:
        -
            message: '#this might not be defined.#'
            path: ../../src/themes/default*
        -
            # Ignore unused constructor parameter error
            identifier: constructor.unusedParameter
            paths:
                - ../../src/classes/Application/EventHandler/OfflineEvents/BaseOfflineEvent.php
        -
            identifier: nullCoalesce.expr
            paths:
                - ../application/assets/classes/TestDriver/Environments/EnvironmentsConfig.php
