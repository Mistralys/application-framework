{
    "name": "1and1/application_framework",
    "description": "Application framework",
    "type": "library",
    "license": "Commercial",
    "authors": [
        {
            "name": "Sebastian Mordziol",
            "email": "s.mordziol@gmail.com",
            "homepage": "http://www.mistralys.eu",
            "role": "Developer"
        }
    ],
	"autoload" : {
		"classmap" : [
			"src/classes/",
            "src/themes/default/templates",
            "tests/assets/classes"
		],
		"files": [
		    "src/functions/functions.php"
		]
	},
    "repositories":[
        {
            "type":"vcs",
            "url":"https://github.com/Mistralys/mousetrap.git"
        },
        {
            "type":"vcs",
            "url":"https://github.com/lipis/flag-icon-css.git"
        },
        {
            "type":"vcs",
            "url":"https://github.com/medialize/URI.js.git"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "mistralys/application-utils" : ">=1.4.0",
        "mistralys/application-localization" : ">=1.3.0",
		"mistralys/deepl-xml-translator" : ">=1.0.2",
		"mistralys/subsetsum" : "1.0.0",
        "mistralys/markdown-viewer": ">=1.0.5",
		"pear/http_request2" : ">=v2.4.2",
		"shark/simple_html_dom" : "dev-master",
        "ccampbell/mousetrap" : "dev-master",
        "medialize/uri.js" : "1.19.2",
		"ulrichsg/getopt-php" : "3.2.1",
		"components/flag-icon-css" : "3.3.0",
        "hybridauth/hybridauth": ">=3.6.0",
        "erusev\/parsedown": "1.7.4",
        "parsecsv/php-parsecsv": "1.2.1",
        "twbs/bootstrap": "v4.6.0",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "8.2.5",
        "phpstan/phpstan" : "^0.12"
    }
}
